---
import { SectionTitle } from "./UI";
import { GithubIcon } from "../assets/Icons";
import { Image } from "astro:assets";
import { personalInfo } from "../constants/cv-data";

const githubUsername = personalInfo.github;
const githubProfileUrl = `https://github.com/${githubUsername}`;
---

<section id="github-contributions" class="w-full px-6 py-12 bg-background">
    <SectionTitle title="GitHub Contributions" color="secondary">
        <div class="Fade_Up relative w-full max-w-7xl lg:max-w-8xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <!-- GitHub Stats Card -->
                <div class="bg-card border border-primary/20 rounded-xl p-6 shadow-lg shadow-primary/10">
                    <div class="flex items-center gap-3 mb-4">
                        <Image src={GithubIcon} alt="GitHub" class="w-6 h-6" />
                        <h3 class="text-xl font-bold text-primary">GitHub Statistics</h3>
                    </div>
                    
                    <div class="grid grid-cols-2 gap-4">
                        <div class="bg-primary/10 rounded-lg p-4 text-center">
                            <div class="text-2xl font-bold text-primary mb-1">150+</div>
                            <div class="text-xs text-mutedForeground">Total Contributions</div>
                        </div>
                        <div class="bg-primary/10 rounded-lg p-4 text-center">
                            <div class="text-2xl font-bold text-primary mb-1">25+</div>
                            <div class="text-xs text-mutedForeground">Projects</div>
                        </div>
                        <div class="bg-primary/10 rounded-lg p-4 text-center">
                            <div class="text-2xl font-bold text-primary mb-1">1.2k+</div>
                            <div class="text-xs text-mutedForeground">Total Commits</div>
                        </div>
                        <div class="bg-primary/10 rounded-lg p-4 text-center">
                            <div class="text-2xl font-bold text-primary mb-1">50+</div>
                            <div class="text-xs text-mutedForeground">Pull Requests</div>
                        </div>
                    </div>
                </div>

                <!-- Contribution Activity -->
                <div class="bg-card border border-primary/20 rounded-xl p-6 shadow-lg shadow-primary/10">
                    <h3 class="text-xl font-bold text-primary mb-4">Contribution Activity</h3>
                    
                    <div class="space-y-3">
                        <div class="flex items-center justify-between p-3 bg-primary/5 rounded-lg">
                            <div class="flex items-center gap-3">
                                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                                <span class="text-sm font-medium">Daily Contributions</span>
                            </div>
                            <span class="text-sm text-mutedForeground">Last 30 days</span>
                        </div>
                        
                        <div class="flex items-center justify-between p-3 bg-primary/5 rounded-lg">
                            <div class="flex items-center gap-3">
                                <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
                                <span class="text-sm font-medium">Code Reviews</span>
                            </div>
                            <span class="text-sm text-mutedForeground">15 reviews</span>
                        </div>
                        
                        <div class="flex items-center justify-between p-3 bg-primary/5 rounded-lg">
                            <div class="flex items-center gap-3">
                                <div class="w-3 h-3 bg-purple-500 rounded-full"></div>
                                <span class="text-sm font-medium">Issues Resolved</span>
                            </div>
                            <span class="text-sm text-mutedForeground">32 issues</span>
                        </div>
                        
                        <div class="flex items-center justify-between p-3 bg-primary/5 rounded-lg">
                            <div class="flex items-center gap-3">
                                <div class="w-3 h-3 bg-orange-500 rounded-full"></div>
                                <span class="text-sm font-medium">Open Source</span>
                            </div>
                            <span class="text-sm text-mutedForeground">8 contributions</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- GitHub Calendar (static image from public/github.png) -->
            <div class="mt-8 bg-card border border-primary/20 rounded-xl p-6 shadow-lg shadow-primary/10">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-xl font-bold text-primary">Contribution Calendar</h3>
                    <a
                        href={githubProfileUrl}
                        target="_blank"
                        rel="noreferrer"
                        class="text-xs text-primary underline"
                    >
                        View on GitHub
                    </a>
                </div>
                <div class="bg-primary/5 rounded-lg p-4 flex items-center justify-center overflow-x-auto">
                    <img
                        src="/github.png"
                        alt="GitHub contribution chart"
                        loading="lazy"
                        class="w-full max-w-4xl h-auto"
                    />
                </div>
            </div>
    
        </div>
    </SectionTitle>
</section>
