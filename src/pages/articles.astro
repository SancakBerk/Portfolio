---
import { Layout } from "../layouts";
import { articles } from "../constants/cv-data";
---

<Layout>
  <section id="articles" class="w-full min-h-screen px-6 py-4 pt-14 bg-background">
    <div class="w-full max-w-6xl mx-auto py-16">
      <header class="mb-10 flex flex-col gap-2">
        <h1 class="text-3xl md:text-4xl font-ubuntu font-semibold">Articles</h1>
        <p class="text-sm md:text-base text-mutedForeground max-w-2xl">
          Thoughts on backend architecture, real-world projects, and lessons learned while building production systems.
        </p>
      </header>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
        {articles.map((post) => (
          <a
            href={`/articles/${post.slug}`}
            class="group bg-card border border-primary/20 rounded-xl p-6 shadow-md shadow-primary/10 flex flex-col gap-3 hover:border-primary/60 transition-colors"
          >
            <div class="flex items-center justify-between gap-3 text-xs text-mutedForeground">
              <span>{post.date}</span>
              <span>{post.readingTime}</span>
            </div>
            <h2 class="text-lg md:text-xl font-semibold group-hover:text-primary transition-colors">
              {post.title}
            </h2>
            <p class="text-sm text-mutedForeground line-clamp-3">
              {post.excerpt}
            </p>
            {post.tags && (
              <div class="mt-2 flex flex-wrap gap-2 text-[11px] text-mutedForeground">
                {post.tags.map((tag) => (
                  <span class="px-2 py-1 rounded-full border border-primaryLiteAlt/60 bg-skillGradientAlt/40">
                    #{tag}
                  </span>
                ))}
              </div>
            )}
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>
